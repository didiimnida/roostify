<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @loan, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :amount, class:"control-label" %>
          <%= f.text_field :amount, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :downpayment, class: "control-label" %>
          <%= f.text_field :downpayment, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :interest_rate, class: "control-label" %>
          <%= f.text_field :interest_rate, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
